<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.braisedpanda.shirotest.mapper.GradesMapper">


    <!--根据学生的id查询所有的成绩,返回VO类-->
    <select id="getStuGradesBystuId" resultType="com.braisedpanda.shirotest.model.vo.StudentGradesCustomVO">

        select * from studentGrades where stuId = #{stuId}
    </select>


    <!--获取部分的学生成绩卡信息(只获取考试时间和考试描述)-->
    <select id="getSGCard" resultType="com.braisedpanda.shirotest.model.po.StudentGradesCard">
        select distinct testTime,testDescribe from studentGradesCard
    </select>


    <!--获取学生成绩卡字段-->
    <select id="getGradesCardById_and_DesCribe" resultType="com.braisedpanda.shirotest.model.po.StudentGradesCard">
        select * from studentGradesCard where stuId=#{stuId} and testDescribe=#{testDescribe}
    </select>



</mapper>